{{!-- <div class="container"> --}}

  <div class="row">
    <div class="col s12 center-align">
      <h1>Eat-Da-Burger</h1>
      <h3>Hope you're hungry!</h3>
    </div>
  </div>

  <div class="row">
    <div class="col s4 center-align">
      <h5>On Deck</h5>
      <ul>
        {{#each burgers}}
          {{!-- <li>{{burger_name}}</li> --}}
          {{#unless devoured}}
            {{> burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s4 center-align">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <h6>Describe your dream burger...</h6>
            <div class="input-field col s12">
              <textarea id="new-burger" class="materialize-textarea"></textarea>
              <label for="new-burger"></label>
            </div>            
          </div>
          {{!-- Double-check if button can be in above row... --}}
          <div class="row">
            <div class="col s12">
              <button class="btn waves-effect waves-light teal darken-1" type="submit" id="add-burger" name="add-burger">Add burger
              <i class="material-icons right">restaurant</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div> 
    {{!-- ^^Closes middle col s4 --}}

    <div class="col s4 center-align">
      <h5>Devoured!</h5>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{!-- New partial sans button --}}
            {{> devoured-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div> 
  </div>

{{!-- </div> --}}
